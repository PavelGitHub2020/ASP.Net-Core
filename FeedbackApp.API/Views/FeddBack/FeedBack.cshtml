@model FeedbackApp.BLL.VMs.Feedback.CreateFeedback
<h2>Оставить отзыв</h2>
<form method="post" asp-controller="FeedBack" asp-action="Leave a feedback">
    <div asp-validation-summary="ModelOnly"></div>
    <div>
        <label asp-for="AuthorName"></label><br />
        <input asp-for="AuthorName" />
        <span asp-validation-for="AuthorName"></span>
    </div>
    <div>
        <label asp-for="Text"></label><br />
        <input asp-for="Text" />
        <span asp-validation-for="Text"></span>
    </div>
    <div>
        <label asp-for="Rate"></label><br />
        <input asp-for="Rate" />
        <span asp-validation-for="Rate"></span>
    </div>
    <div>
        <label asp-for="ProductCategory"></label><br />
        <input asp-for="ProductCategory" />
        <span asp-validation-for="ProductCategory"></span>
    </div>
    <div>
        <label asp-for="ProductName"></label><br />
        <input asp-for="ProductName" />
        <span asp-validation-for="ProductName"></span>
    </div>
    <div>
        <label asp-for="MediaFiles"></label><br />
        <input asp-for="MediaFiles" />
        <span asp-validation-for="MediaFiles"></span>
    </div>
    <div>
        <p>Время создания отзыва: <time datetime="YYYY-MM-DDThh:mm"></time></p>
    </div>
    <div>
        <input type="submit" value="Добавить" />
    </div>
</form>
